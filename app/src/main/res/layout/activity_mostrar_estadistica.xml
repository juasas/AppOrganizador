<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    tools:context=".MostrarEstadisticaActivity">

    <RelativeLayout
        style="@style/match_match">

        <TextView
            android:id="@+id/mostrar_estad_titulo"
            style="@style/estilo_comun_textos"
            android:textSize = "40sp"
            android:textAlignment = "center"
            android:text="Estadísticas de usuario" />

        <ImageView
            android:id="@+id/mostrar_estad_icono_ayuda"
            style="@style/estilo_ayuda"
            android:layout_below="@+id/mostrar_estad_titulo"
            android:onClick="ayuda"/>

        <LinearLayout
            android:id="@+id/mostrar_estad_grupo_cajas"
            style="@style/estilo_linear_cajas"
            android:layout_below="@+id/mostrar_estad_icono_ayuda">

            <TextView
                style="@style/estilo_etiquetas"
                android:text="Fecha de alta:"/>

            <TextView
                android:id="@+id/mostrar_estad_caja_fecha"
                style="@style/estilo_etiquetas_contenido" />

            <TextView
                style="@style/estilo_etiquetas"
                android:text="Número total de Ubicaciones:"/>

            <TextView
                android:id="@+id/mostrar_estad_caja_total_ubic"
                style="@style/estilo_etiquetas_contenido" />

            <TextView
                style="@style/estilo_etiquetas"
                android:text="Número total de Categorias:"/>

            <TextView
                android:id="@+id/mostrar_estad_caja_total_cat"
                style="@style/estilo_etiquetas_contenido" />

            <TextView
                style="@style/estilo_etiquetas"
                android:text="Número total de Pertenencias:"/>

            <TextView
                android:id="@+id/mostrar_estad_caja_total_pert"
                style="@style/estilo_etiquetas_contenido" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>