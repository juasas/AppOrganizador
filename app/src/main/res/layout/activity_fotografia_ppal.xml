<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_wrap"
    android:orientation="vertical"
    tools:context=".FotografiaPpalActivity">

    <TextView
        android:id = "@+id/fotografia_ppal_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "25sp"
        android:text = "Fotografias" />

    <TextView
        android:id = "@+id/fotografia_ppal_subtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "25sp"
        android:text = "¿Qué desea hacer?" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/fotografia_ppal_rb_camara"
        android:text="Tomar foto de la cámara"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/fotografia_ppal_rb_galeria"
        android:text="Tomar foto de la galería" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_boton_cerrar"
        android:text="Acceder" />

</LinearLayout>