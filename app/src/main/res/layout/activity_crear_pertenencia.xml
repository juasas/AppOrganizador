<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    tools:context=".CrearPertenenciaActivity">

    <RelativeLayout
        style="@style/match_match">

        <TextView
            android:id="@+id/crear_pert_titulo"
            style="@style/estilo_comun_textos"
            android:text="Nueva Pertenencia"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/crear_pert_icono_ayuda"
            style="@style/estilo_ayuda"
            android:layout_below="@+id/crear_pert_titulo" />

        <LinearLayout
            android:id = "@+id/crear_pert_grupo_cajas"
            style="@style/estilo_linear_cajas"
            android:layout_below="@+id/crear_pert_icono_ayuda">

            <TextView
                style="@style/estilo_etiquetas"
                android:text="(Obligatorio) Nombre de la Pertenencia, máx 50 caracteres:" />

            <EditText
                android:id="@+id/crear_pert_caja_nombre"
                style="@style/estilo_cajas"
                android:hint="Introduzca nombre" />

            <TextView
                style="@style/estilo_etiquetas"
                android:text="(Opcional) Detalle de la Pertenencia, máx. 150 caracteres:" />

            <EditText
                android:id="@+id/crear_pert_caja_detalle"
                style="@style/estilo_cajas"
                android:hint="Introduzca detalle"
                android:maxLength="150"/>

            <TextView
                style="@style/estilo_etiquetas"
                android:text="Seleccione una Categoría para la Pertenencia:" />

            <Spinner
                android:id="@+id/crear_pert_sp_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <TextView
                style="@style/estilo_etiquetas"
                android:text="Seleccione una Ubicación para la Pertenencia:" />

            <Spinner
                android:id="@+id/crear_pert_sp_ubic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <Button
            android:id="@+id/crear_pert_boton_limpiar"
            style="@style/estilo_boton"
            android:layout_below="@+id/crear_pert_grupo_cajas"
            android:layout_marginTop="20dp"
            android:text="Borrar campos"
            android:onClick="resetear"/>

        <Button
            android:id="@+id/crear_pert_boton_foto"
            style="@style/estilo_boton"
            android:layout_below="@+id/crear_pert_boton_limpiar"
            android:layout_marginTop="20dp"
            android:text="Obtener fotografía"
            android:onClick="entrarMenuFoto"/>

        <FrameLayout
            android:id="@+id/crear_pert_frame"
            style="@style/match_match"
            android:layout_below="@+id/crear_pert_boton_foto">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/crear_pert_fab"
                style="@style/estilo_fab"
                android:onClick="crearNuevaPertenencia"
                android:src="@mipmap/iconook"
                app:fabSize="normal" />
        </FrameLayout>
    </RelativeLayout>
</ScrollView>